      "title": {
        "en": "Compressor running"
      },
      "preventInsights": false,
      "preventTag": false
    },
    "measure_something_number.compressorHours": {
      "title": {
        "en": "Compressor runtime"
      },
      "units": "hours",
      "preventInsights": true,
      "preventTag": true
    },
    "measure_something_number.compressorStarts": {
      "title": {
        "en": "Compressor starts"
      },
      "units": "times",
      "preventInsights": true,
      "preventTag": true
    },
    "measure_burner_active": {
      "title": {
        "en": "Burner running"
      },
      "titleTrue": {
        "en": "Yes"
      },
      "titleFalse": {
