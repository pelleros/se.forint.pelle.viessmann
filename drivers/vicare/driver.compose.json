{
  "id": "vicare",
  "name": {
    "en": "ViCare"
  },
  "class": "heater",
  "capabilities": [
    "measure_temperature.hotWater",
    "target_temperature.hotWater",
    "target_temperature.hotWater2",
    "target_temperature.heating",
    "thermostat_mode.hotWaterOneTimeCharge",
    "thermostat_mode.heating",
    "measure_temperature.outside",
    "measure_temperature.return",
    "measure_temperature.buffer",
    "measure_something_active.compressor",
    "measure_something_number.compressorHours",
    "measure_something_number.compressorStarts",
    "measure_burner_active",
    "measure_burner_number.burnerHours",
    "measure_burner_number.burnerStarts"
  ],
  "capabilitiesOptions": {
    "measure_temperature.hotWater": {
      "title": {
        "en": "Hot water temperature"
      },
      "units": "°C",
      "preventInsights": false,
      "preventTag": false
    },
    "target_temperature.hotWater": {
      "title": {
        "en": "Hot water thermostat"
      },
      "units": "°C",
      "min": 10,
      "max": 60,
      "step": 1,
      "preventInsights": true
    },
    "target_temperature.hotWater2": {
      "title": {
        "en": "Hot water thermostat 2"
      },
      "units": "°C",
      "min": 10,
      "max": 60,
      "step": 1,
      "preventInsights": true
    },
    "target_temperature.heating": {
      "title": {
        "en": "Heating thermostat"
      },
      "units": "°C",
      "min": 10,
      "max": 30,
      "step": 1,
      "preventInsights": true
    },
    "thermostat_mode.hotWaterOneTimeCharge": {
      "title": {
        "en": "Hot water one time charge"
      },
      "values": [
        {
          "id": "activate",
          "title": {
            "en": "Active"
          }
        },
        {
          "id": "deactivate",
          "title": {
            "en": "Inactive"
          }
        }
      ]
    },
    "thermostat_mode.heating": {
      "title": {
        "en": "Heating mode"
      },
      "values": [
        {
          "id": "dhw",
          "title": {
            "en": "Hot water"
          }
        },
        {
          "id": "dhwAndHeating",
          "title": {
            "en": "Hot water and heating"
          }
        },
        {
          "id": "heating",
          "title": {
            "en": "Heating"
          }
        },
        {
          "id": "standby",
          "title": {
            "en": "Standby"
          }
        }
      ]
    },
    "measure_temperature.outside": {
      "title": {
        "en": "Outside temperature"
      },
      "units": "°C",
      "preventInsights": false,
      "preventTag": false
    },
    "measure_temperature.return": {
      "title": {
        "en": "Return temperature"
      },
      "units": "°C",
      "preventInsights": false,
      "preventTag": false
